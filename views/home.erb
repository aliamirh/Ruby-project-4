<h1>Volunteer Tracker</h1>

<h2>Current Projects</h2>
<% if @projects.any? %>
<% @projects.each do |project| %>

<ul>
  <li><a href="/project/<%= project.id %>" title="Project Details"><%=project.title%></a></li>
</ul>
<% end %>
<% else %>
<p>Currently no projects</p>
<% end %>

<h3>Create a project for volunteers</h3>
<form class="form-group" action="/project" method="post">
  <label for="title">Title: </label>
  <input class="title" id="title" type="text" name="title">
  <button type="submit">Create Project</button>
</form>
