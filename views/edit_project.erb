<h1>Update <%= @project.title() %></h1>

<form action="/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="project_title">Rename project</label>
  <input id="project_title" name="project_title" type="text">

  <button type="submit"class="btn btn-primary">Update</button>
</form>

<p><a href="/projects">Return to project list</a></p>

<form action="/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit"class="btn btn-primary">Delete project</button>
</form>
